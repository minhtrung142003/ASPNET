                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 2).Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail","Product", new {id = item.id }, null)" class="item">
                                    <div class="card-body">
                                        <h6 class="title">@item.name </h6>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.image">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i> @item.price</p>
                                    </div>
                                </a>
                            </li>
                        }

                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
